<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TableRow>
        <EditText
        android:id="@+id/text1"
        android:layout_span="5"
        android:hint="숫자1"
         />
    </TableRow>

    <TableRow>
    <EditText
        android:id="@+id/text2"
        android:layout_span="5"
        android:hint="숫자2"
         />

    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btn0"
            android:text="0"/>
        <Button
            android:id="@+id/btn1"
            android:text="1"/>
        <Button
            android:id="@+id/btn2"
            android:text="2"/>


    </TableRow>


    <TableRow>
        <Button
            android:id="@+id/btn3"
            android:text="3"/>
        <Button
            android:id="@+id/btn4"
            android:text="4"/>
        <Button
            android:id="@+id/btn5"
            android:text="5"/>
        <Button
            android:id="@+id/clear"
            android:text="c"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btn6"
            android:text="6"
            />
        <Button
            android:id="@+id/btn7"
            android:text="7"
            />
        <Button
            android:id="@+id/btn8"
            android:text="8"
            />
        <Button
            android:id="@+id/btn9"
            android:text="9"
            />
    </TableRow>

    <TableRow>
        <Button
            android:layout_span="5"
            android:id="@+id/plus"
            android:text="+"/>
    </TableRow>
    <TableRow>
        <Button
            android:layout_span="5"
            android:id="@+id/minus"
            android:text="-"/>
    </TableRow>
    <TableRow>
        <Button
            android:layout_span="5"
            android:id="@+id/mul"
            android:text="*"/>
    </TableRow>

    <TableRow>
        <Button
            android:layout_span="5"
            android:id="@+id/div"
            android:text="/"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="결과:"/>
        <TextView
            android:id="@+id/result1"
            android:text="결과위치"/>

    </TableRow>

</TableLayout>